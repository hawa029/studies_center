{% extends 'base.html.twig' %}

{% block title %}Se connecter - Eco IT - Des formations pour la planête{% endblock %}

{% block body %}

<link href="{{ asset('css/sign.css')}}" rel="stylesheet" />

{% include 'navigation.html.twig'%}

<main class=" container text-center">
    
<section class="form-signin my-5 py-5">
  <form action="{{ path('app_login') }}" method="post">
 
    <h1 class=" mb-5 fw-normal">Merci de vous connecter</h1>
    <p><a href="{{ path('app_home')}}">Inscrivez-vous</a>  ou connectez-vous pour accéder aux contenus du site</p>

    <div class="form-floating my-3">
      <input type="text" class="form-control" required name="_username" />
      <label for="username">Identifiant</label>
    </div>
    <div class="form-floating my-3">
      <input type="password" class="form-control" required name="_password" />
      <label for="password">Mot de passe</label>
    </div>

    <button class="w-100 btn btn-lg btn-primary" type="submit">Connexion</button>
   
    <p class="mt-5 mb-3 text-muted"><a  href="#">Mot de passe oublié</a></p>

  </form>
</section>

</main>

{% include 'footer.html.twig' %}
  
{% endblock %}
