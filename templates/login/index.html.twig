{% extends 'base.html.twig' %}

{% block title %}Se connecter - Eco IT - Des formations pour la planête{% endblock %}

{% block body %}

<link href="{{ asset('css/sign.css')}}" rel="stylesheet" />

{% include 'navigation.html.twig'%}

<main class=" container text-center">
    
<section class="form-signin my-5 py-5">
  <form>
 
    <h1 class="h3 mb-5 fw-normal">Merci de vous connecter</h1>

    <div class="form-floating my-3">
      <input type="email" class="form-control" id="floatingInput">
      <label for="floatingInput">E-mail</label>
    </div>
    <div class="form-floating my-3">
      <input type="password" class="form-control" id="floatingPassword">
      <label for="floatingPassword">Mot de passe</label>
    </div>

    <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me"> Se souvenir de moi
      </label>
    </div>
    <input class="w-100 btn btn-lg btn-primary" type="submit"><a href="{{ path('admin')}}"></a></input>
    <p class="mt-5 mb-3 text-muted"><a  href="#">Des difficultés de connexion ? Cliquez ici</a></p>

  </form>
</section>

</main>

{% include 'footer.html.twig' %}
  
{% endblock %}
