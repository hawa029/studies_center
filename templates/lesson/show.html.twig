{% extends 'base.html.twig' %}

{% block title %}Espace de gestion{% endblock %}

{% block body %}

{% include 'navigation.html.twig'%}

<main class=" container py-5">

    <h1>Leçon</h1>

    <table class="table table-hover">
        <caption>Aperçu de la leçon</caption>
        <tbody>
            <tr>
                <th>N°</th>
                <td>{{ lesson.id }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>
                    {% for video in lesson.video %}
                        <div>
                            <video controls fullscreen width="500">

                                <source src="{{ asset('/videos/' ~ video.name) }}" type="video/mp4">

                                Un problème est survenu...
                            </video>
                        </div>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ lesson.description }}</td>
            </tr>
            <tr>
                <th>Ressources</th>
                <td></td>
               {#  <td>{{ lesson.files }}</td> #}
            </tr>
        </tbody>
    </table>

      <a href="{{ path('app_lesson_index') }}"><button class="btn btn-primary">Retour à l'index</button></a>

     <a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}"><button class="btn btn-warning">Modifier</button></a>

    <div class="py-2">
        {{ include('lesson/_delete_form.html.twig') }}
    </div>

</main>

{% endblock %}
