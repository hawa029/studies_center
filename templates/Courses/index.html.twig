{% extends 'base.html.twig' %}

{% block title %}Nos formations - Eco IT - Des formations pour la planête{% endblock %}


{% block body %}

{% include 'navigation.html.twig'%}

<main>

  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light py-3">Les formations proposées</h1>
        <p class="lead text-muted">
          Nemo enim ipsam voluptatem quia voluptas sit aspernatur aut odit aut fugit, 
          sed quia consequuntur magni dolores eos qui ratione voluptatem sequi nesciunt. 
          Neque porro quisquam est, qui dolorem ipsum quia dolor sit amet.
      </div>
    </div>
  </section>

  {# Section container for displaying formations#}
  <div class="album py-5 bg-primary">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

    {% for course in courses %}
        <div class="col">
          <div class="card shadow-sm">
          
            {% for illustration in course.illustrations %}
            <img class="card-img img-responsive" src="{{ asset('/images/courses/' ~ illustration.name) }}" alt="image"/>
            {% endfor %}
            <div class="card-body">
            <h3 class="h4 p-1 card-title">{{ course.title }}</h3>
              <p class="card-text">{{ course.description }}<</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                 <a href="{{ path('app_course_show', {'id': course.id}) }}"><button class="btn btn-info mb-1">Commencer !</button></a>
                </div>
              
              </div>
            </div>
          </div>
        </div>
    {% endfor %}  

      </div>
    </div>
  </div>

</main>

</div>

{%include 'footer.html.twig' %}

{% endblock %}


