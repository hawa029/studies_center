{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}

{% include 'navigation.html.twig'%}

<main class=" container py-5">
    <h1 class="pb-4">Gestion des  utilisateurs</h1>

    <h2>Utilisateurs</h2>

    <section class="col-12 my-4">
        <table class="table  table-hover">
            <caption>Liste des utilisateurs</caption>
        <thead>
            <tr>
                
                <th>Id</th>
                <th>Pseudo</th>
                <th>E-mail</th>
                <th>Roles</th>
                <th>Formations</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username}}</td>
                <td>{{ user.email }}</td>
                <td>
                    {% for role in user.roles %}
                        {% if role == "ROLE_USER" %}
                            Utilisateur
                        {% elseif role == "ROLE_STUDENT" %}
                            Apprenant
                        {% elseif role == "ROLE_TEACHER" %}
                            Formateur
                        {% elseif role == "ROLE_EDITOR" %}
                            Editeur
                        {% elseif role == "ROLE_ADMIN" %}
                            Administrateur
                        {% endif %}
                    {% endfor %}
                </td>
                <td></td>
                <td>
                      <a href="{{ path('app_admin_modify_user', {'id': user.id}) }}"><button class="btn btn-warning">Modifier</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun utilisateur inscrit</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </section>
 </main>   


{% include 'footer.html.twig'%}

{% endblock %}