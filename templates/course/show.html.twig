{% extends 'base.html.twig' %}

{% block title %}Espace de gestion{% endblock %}

{% block body %}

{% include 'navigation.html.twig'%}

<main class=" container py-5">
    <h1>Formation</h1>

    <table class="table table-hover">
        <caption>Aperçu d'une formation</caption>
        <tbody>
            <tr>
                <th>N°</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ course.title }}</td>
            </tr>
            <tr>
                <th>Illustration</th>
                    <td>
                        {% for illustration in course.illustrations %}
                            <div>
                                <img class="m-3" src="{{ asset('/images/courses/' ~ illustration.name) }}" alt="images" width="200"/>
                            </div>
                        {% endfor %}
                    </td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ course.description }}</td>
            </tr>
          
        </tbody>
    </table>

   <a href="{{ path('app_course_index') }}"><button class="btn btn-primary">Retour à l'index</button></a>

 <a href="{{ path('app_course_edit', {'id': course.id}) }}"><button class="btn btn-warning">Modifier</button></a>

{{ include('course/_delete_form.html.twig') }}
</main>
{% endblock %}
